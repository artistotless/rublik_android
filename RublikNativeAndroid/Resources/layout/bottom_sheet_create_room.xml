<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/bottom_sheet"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/colorPrimaryDark"
	android:orientation="vertical"
	android:padding="16dp">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Новое лобби"
		android:textStyle="bold"
		android:textSize="16dp"
		android:layout_marginBottom="20dp"
		/>
	<Button
		android:id="@+id/room_create_idGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:text="Выбрать игру"
		app:icon="@drawable/mail_ico"
		style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
		/>
	
	<EditText
		android:id="@+id/room_create_award"
		android:layout_width="200dp"
		android:hint="Ставка в RUB"
		android:inputType="number"
		android:paddingLeft="15dp"
		android:layout_marginBottom="15dp"
		android:fontFamily="sans-serif-condensed"
			android:layout_height="wrap_content"/>
	<LinearLayout

		android:orientation="horizontal"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content">
		<TextView
			android:id="@+id/room_create_isPrivateText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Установить пароль"/>
		<EditText
			android:id="@+id/room_create_password"
			android:visibility="gone"
			android:layout_width="200dp"
			android:hint="Пароль"
			android:inputType="textVisiblePassword"
			android:paddingLeft="15dp"
			android:layout_marginBottom="15dp"
			android:fontFamily="sans-serif-condensed"
			android:background="@drawable/et_custom"
			android:layout_height="35dp"/>
		<CheckBox
			android:id="@+id/room_create_isPrivate"
			android:layout_marginLeft="6dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
	</LinearLayout>
	<Button
		android:id="@+id/room_create_submit"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="16dp"
		android:layout_alignParentBottom="true"
		android:background="@drawable/rectanglewithborderradius5"
		android:text="@string/create"
	/>

</LinearLayout>