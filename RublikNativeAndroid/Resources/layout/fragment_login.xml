<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".LoginFragment">

	<ProgressBar
		android:layout_width="match_parent"
		android:layout_height="25dp"
		android:id="@+id/login_progress"
		android:layout_marginTop="20dp"
		android:visibility="gone"/>


	<EditText
		android:id="@+id/et_email"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:hint="@string/identity_or_email"
		android:layout_marginLeft="@dimen/login_register_page_lr_margin"
		android:layout_marginRight="@dimen/login_register_page_lr_margin"
		android:padding="15dp"
		android:layout_marginTop="15dp"
		android:inputType="textEmailAddress"
		android:layout_above="@id/et_password"
		android:background="@drawable/et_custom"
		android:textSize="15sp"
		android:text="user" />

	<EditText
		android:id="@+id/et_password"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:hint="@string/password"
		android:layout_marginLeft="@dimen/login_register_page_lr_margin"
		android:layout_marginRight="@dimen/login_register_page_lr_margin"
		android:layout_marginTop="10dp"
		android:padding="15dp"
		android:inputType="textPassword"
		android:layout_centerInParent="true"
		android:background="@drawable/et_custom"
		android:textSize="15sp"
		android:text="user" />

	<Button
		android:id="@+id/btn_login"
		android:layout_height="50dp"
		android:layout_width="match_parent"
		android:layout_below="@id/et_password"
		android:background="@drawable/btn_custom"
		android:layout_marginLeft="@dimen/login_register_page_lr_margin"
		android:layout_marginRight="@dimen/login_register_page_lr_margin"
		android:layout_marginTop="15dp"
		android:textColor="@android:color/white"
		android:text="@string/login_btn"/>

	<Button
		android:id="@+id/btn_to_register"
		android:layout_height="40sp"
		android:layout_gravity="center"
		android:layout_width="wrap_content"
		android:layout_below="@id/btn_login"
		android:layout_marginLeft="@dimen/login_register_page_lr_margin"
		android:layout_marginRight="@dimen/login_register_page_lr_margin"
		android:layout_marginTop="15dp"
		android:textColor="#ff546e7a"
		android:text="@string/register"
		android:backgroundTint="#ffeeeeee" />

</LinearLayout>