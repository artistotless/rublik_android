<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:background="#ffeeeeee"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		tools:context=".RegisterFragment">



		<EditText
			android:id="@+id/et_username"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_marginTop="15dp"
			android:hint="@string/identity"
			android:layout_marginLeft="@dimen/login_register_page_lr_margin"
			android:layout_marginRight="@dimen/login_register_page_lr_margin"
			android:layout_marginBottom="10dp"
			android:padding="15dp"
			android:inputType="text"
			android:background="@drawable/et_custom"
			android:layout_above="@id/et_password"
			android:textSize="15sp" />

		<EditText
			android:id="@+id/et_email"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:hint="@string/email"
			android:layout_marginLeft="@dimen/login_register_page_lr_margin"
			android:layout_marginRight="@dimen/login_register_page_lr_margin"
			android:layout_marginBottom="10dp"
			android:padding="15dp"
			android:inputType="textEmailAddress"
			android:background="@drawable/et_custom"
			android:layout_above="@id/et_password"
			android:textSize="15sp" />

		<EditText
			android:id="@+id/et_password"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:hint="@string/password"
			android:layout_marginLeft="@dimen/login_register_page_lr_margin"
			android:layout_marginRight="@dimen/login_register_page_lr_margin"
			android:layout_marginBottom="10dp"
			android:padding="15dp"
			android:inputType="textPassword"
			android:background="@drawable/et_custom"
			android:layout_above="@id/et_email"
			android:textSize="15sp" />


		<Button
			android:id="@+id/btn_register"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:background="@drawable/btn_custom"
			android:layout_marginLeft="@dimen/login_register_page_lr_margin"
			android:layout_marginRight="@dimen/login_register_page_lr_margin"
			android:layout_marginTop="15dp"
			android:layout_below="@id/et_password"
			android:textColor="@android:color/white"
			android:text="@string/register"/>

		<Button
			android:id="@+id/btn_to_login"
			android:layout_height="40sp"
			android:layout_gravity="center"
			android:layout_width="wrap_content"
			android:layout_below="@id/btn_register"
			android:layout_marginLeft="@dimen/login_register_page_lr_margin"
			android:layout_marginRight="@dimen/login_register_page_lr_margin"
			android:layout_marginTop="15dp"
			android:textColor="#ff546e7a"
			android:text="@string/login_btn"
			android:backgroundTint="#ffeeeeee" />
	</LinearLayout>
</ScrollView>