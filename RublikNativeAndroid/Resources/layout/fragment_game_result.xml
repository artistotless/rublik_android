<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
    >
	<com.airbnb.lottie.LottieAnimationView
		android:id="@+id/game_result_confetti"
		app:layout_constraintBottom_toBottomOf="@id/game_result_header"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="40dp"
        />
	<TextView
		style="@android:style/TextAppearance.Material.Widget.ActionBar.Title"
		android:id="@+id/game_result_header"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="25dp"
		android:textStyle=""
		android:text="Вы победили!"
		android:gravity="center"
		android:layout_marginBottom="20dp"
		app:layout_constraintBottom_toTopOf="@id/game_result_win_sum"
        />
	<TextView
		android:id="@+id/game_result_win_sum"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:text="+ 30 RUB"
		android:textColor="#ffe53935"
		android:textStyle="bold"
		android:textSize="18dp"
		android:layout_margin="10dp"
		/>

	<LinearLayout
		android:gravity="center"
		android:layout_marginTop="20dp"
		app:layout_constraintTop_toBottomOf="@id/game_result_win_sum"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<Button
			android:id="@+id/game_result_goHome"
			android:layout_width="120dp"
			android:layout_height="wrap_content"
			android:textAllCaps="false"
			android:text="@string/myprofile"/>
	</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
