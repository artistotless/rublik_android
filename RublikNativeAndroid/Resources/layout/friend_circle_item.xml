<?xml version="1.0" encoding="UTF-8" ?>

<androidx.constraintlayout.widget.ConstraintLayout
	android:id="@+id/friend_list_layout"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	>

	<ImageView
		android:id="@+id/friend_image"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		android:layout_width="48dp"
		android:layout_height="48dp"
		android:backgroundTint="#ff616161"
		android:layout_marginHorizontal="8dp"
		android:background="@drawable/rectanglewithborderradius10"
		android:contentDescription="ProfileImage"
		android:cropToPadding="true" />

	<View
		android:layout_width="13dp"
		android:layout_height="13dp"
		android:layout_marginStart="37dp"
		app:layout_constraintStart_toStartOf="@id/friend_image"
		app:layout_constraintBottom_toBottomOf="@id/friend_image"
		android:background="@drawable/online_circle"
		/>
	

	

</androidx.constraintlayout.widget.ConstraintLayout>