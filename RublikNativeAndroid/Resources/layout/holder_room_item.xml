<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginEnd="20dp"
	android:layout_marginStart="20dp"
	android:layout_marginTop="10dp"
	android:paddingVertical="15dp"
	android:backgroundTint="#ff424242"
	android:background="@drawable/rectanglewithborderradius10"
	android:paddingHorizontal="20dp"
	
    >


	<include
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		layout="@layout/holder_room_game"/>

	<TextView
		android:id="@+id/room_award"
		android:layout_width="wrap_content"
		android:layout_height="30dp"
		android:layout_marginEnd="20dp"
		android:paddingHorizontal="8dp"
		android:gravity="center"
		android:backgroundTint="#1c27ae60"
		android:textColor="#27AE60"
		android:textStyle="bold"
		android:text="*** RUB"
		android:background="@drawable/btn_custom"

        />

	<TextView
		android:id="@+id/room_host"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="20dp"
		android:maxWidth="100dp"
		android:ellipsize="end"
		android:text="***"
		android:singleLine="true"

        />

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="right">

		<include
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			layout="@layout/holder_players_count"/>


	</RelativeLayout>



</LinearLayout>
