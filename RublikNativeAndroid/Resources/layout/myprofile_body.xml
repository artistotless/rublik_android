<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingHorizontal="10dp"
	android:orientation="vertical"
	tools:gridSpec="1|8|#0093eeff|K:#ee8700ff:16,l:72,l:16,r|S:#83ee00ff:16,0,l:16,56,l:16,0,r">

	<TextView
		android:layout_marginBottom="@dimen/title_marginBottom"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="@dimen/title"
		android:textStyle="bold"
		android:labelFor="@id/profile_status_value"
		android:text="@string/quote"/>

	<EditText
		android:id="@+id/profile_status_value"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text=""
		android:layout_marginLeft="8dp"
		android:textSize="@dimen/quoteSize"
		android:enabled="false"
		/>

	<TextView
		android:layout_marginTop="@dimen/title_marginTop"
		android:layout_marginBottom="@dimen/title_marginBottom"
		android:textSize="@dimen/title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/friends_online"
		android:textStyle="bold"/>

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/profile_friends_scroll_view"
		android:layout_marginTop="6dp"
		android:layout_marginBottom="@dimen/title_marginBottom"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
	</androidx.recyclerview.widget.RecyclerView>



	<TextView
		android:layout_marginTop="@dimen/title_marginTop"
		android:layout_marginBottom="@dimen/title_marginBottom"
		android:textSize="@dimen/title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/services"
		android:textStyle="bold"/>

	<com.google.android.material.internal.FlowLayout
		app:lineSpacing="10dp"
		app:itemSpacing="10dp"
		android:paddingTop="10dp"
		android:layout_marginLeft="8dp"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		>

		<Button
			android:id="@+id/services_games"
			android:text="@string/games"
			android:drawableTint="#ffef5350"
			style="@style/btn_service_style"
			android:drawableTop="@drawable/games_ico"
			/>

		<Button
			android:id="@+id/services_stats"
			android:text="@string/stats"
			android:drawableTop="@drawable/graph_ico"
			style="@style/btn_service_style"
			android:drawableTint="#ff9ccc65" 
			/>
		<Button
			android:id="@+id/services_tournaments"
			android:drawableTop="@drawable/trophy_ico"
			android:text="@string/tournaments"
			style="@style/btn_service_style"
			android:drawableTint="#ffffa726" 
		/>
		<Button
			android:id="@+id/services_news"
			android:drawableTop="@drawable/news_ico"
			android:text="@string/news"
			style="@style/btn_service_style"
			android:drawableTint="#ff42a5f5" 
			/>

	</com.google.android.material.internal.FlowLayout>




</LinearLayout>